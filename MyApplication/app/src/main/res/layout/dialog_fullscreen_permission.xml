<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fullscreen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need precise location authority to work"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <Button
        android:id="@+id/dialog_button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go setting"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/dialog_button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit app"
        android:layout_marginTop="16dp" />
</LinearLayout>